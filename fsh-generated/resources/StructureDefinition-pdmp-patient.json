  "description": "Defines constraints and extensions on the Patient resource when used by a Prescription Drug Monitoring Program (PDMP) to request or return an individual's medication dispense history.",
  "jurisdiction": [
    {
      "coding": [
        {
          "code": "US",
          "system": "urn:iso:std:iso:3166",
          "display": "United States of America"
        }
      ]
    }
  ],
  "fhirVersion": "4.0.1",
  "mapping": [
    {
      "identity": "rim",
      "uri": "http://hl7.org/v3",
      "name": "RIM Mapping"
    },
    {
      "identity": "cda",
      "uri": "http://hl7.org/v3/cda",
      "name": "CDA (R2)"
    },
    {
      "identity": "w5",
      "uri": "http://hl7.org/fhir/fivews",
      "name": "FiveWs Pattern Mapping"
    },
    {
      "identity": "v2",
      "uri": "http://hl7.org/v2",
      "name": "HL7 v2 Mapping"
    },
    {
      "identity": "loinc",
      "uri": "http://loinc.org",
      "name": "LOINC code for the element"
    },
    {
      "identity": "pdmp-patient-to-script-2017071",
      "name": "PDMP-SCRIPT Patient map",
      "uri": "http://ncpdp.org/SCRIPT/2017071",
      "comment": "Mapping PDMP Patient to SCRIPT 2017071 Patient structure"
    },
    {
      "identity": "pdmp-patient-to-pmix",
      "name": "PDMP-PMIX Patient map",
      "uri": "http://pmixpmp.org/niem/4.0/extension",
      "comment": "Mapping PDMP Patient to PMIX 4.0 Patient structure"
    }
  ],
  "kind": "resource",
  "abstract": false,
  "type": "Patient",
  "baseDefinition": "http://hl7.org/fhir/us/core/StructureDefinition/us-core-patient",
  "derivation": "constraint",
  "differential": {
    "element": [
      {
        "id": "Patient",
        "path": "Patient",
        "definition": "Patient population guidance for use in a PDMP request or response."
      },
      {
        "id": "Patient.extension:patient-animal",
        "path": "Patient.extension",
        "sliceName": "patient-animal",
        "min": 0,
        "max": "1",
        "type": [
          {
            "code": "Extension",
            "profile": [
              "http://hl7.org/fhir/StructureDefinition/patient-animal"
            ]
          }
        ],
        "mustSupport": true
      },
      {
        "id": "Patient.identifier",
        "path": "Patient.identifier",
        "slicing": {
          "discriminator": [
            {
              "type": "value",
              "path": "type.coding.code"
            }
          ],
          "rules": "open",
          "description": "Slice based on the Identifier.type.code"
        }
      },
      {
        "id": "Patient.identifier:medicalRecordNumber",
        "path": "Patient.identifier",
        "sliceName": "medicalRecordNumber",
        "min": 0,
        "max": "*",
        "mapping": [
          {
            "identity": "pdmp-patient-to-script-2017071",
            "map": "Patient/Identification/MedicalRecordIdentificationNumberEHR"
          },
          {
            "identity": "pdmp-patient-to-pmix",
            "map": "pmp:Patient/pmp:PersonOtherIdentifier"
          }
        ]
      },
      {
        "id": "Patient.identifier:medicalRecordNumber.type.coding.system",
        "path": "Patient.identifier.type.coding.system",
        "patternUri": "http://terminology.hl7.org/CodeSystem/v2-0203"
      },
      {
        "id": "Patient.identifier:medicalRecordNumber.type.coding.code",
        "path": "Patient.identifier.type.coding.code",
        "min": 1,
        "patternCode": "MR"
      },
      {
        "id": "Patient.identifier:driversLicense",
        "path": "Patient.identifier",
        "sliceName": "driversLicense",
        "min": 0,
        "max": "*",
        "mapping": [
          {
            "identity": "pdmp-patient-to-script-2017071",
            "map": "N/A",
            "comment": "no direct map"
          },
          {
            "identity": "pdmp-patient-to-pmix",
            "map": "pmp:Patient/pmp:PersonDriverLicenseIdentifier"
          }
        ]
      },
      {
        "id": "Patient.identifier:driversLicense.type.coding.system",
        "path": "Patient.identifier.type.coding.system",
        "patternUri": "http://terminology.hl7.org/CodeSystem/v2-0203"
      },
      {
        "id": "Patient.identifier:driversLicense.type.coding.code",
        "path": "Patient.identifier.type.coding.code",
        "min": 1,
        "patternCode": "DL"
      },
      {
        "id": "Patient.identifier:socialSecurity",
        "path": "Patient.identifier",
        "sliceName": "socialSecurity",
        "min": 0,
        "max": "1",
        "mapping": [
          {
            "identity": "pdmp-patient-to-script-2017071",
            "map": "Patient/Identification/SocialSecurity"
          },
          {
            "identity": "pdmp-patient-to-pmix",
            "map": "pmp:Patient/nc:PersonSSNIdentification"
          }
        ]
      },
      {
        "id": "Patient.identifier:socialSecurity.type.coding.system",
        "path": "Patient.identifier.type.coding.system",
        "patternUri": "http://terminology.hl7.org/CodeSystem/v2-0203"
      },
      {
        "id": "Patient.identifier:socialSecurity.type.coding.code",
        "path": "Patient.identifier.type.coding.code",
        "min": 1,
        "patternCode": "SS"
      },
      {
        "id": "Patient.identifier:socialSecurity.system",
        "path": "Patient.identifier.system",
        "patternUri": "http://hl7.org/fhir/sid/us-ssn"
      },
      {
        "id": "Patient.name",
        "path": "Patient.name",
        "mapping": [
          {
            "identity": "pdmp-patient-to-pmix",
            "map": "pmp:Patient/nc:PersonName"
          }
        ]
      },
      {
        "id": "Patient.name.family",
        "path": "Patient.name.family",
        "min": 1,
        "mapping": [
          {
            "identity": "pdmp-patient-to-pmix",
            "map": "pmp:Patient/nc:PersonName/nc:PersonSurName"
          }
        ]
      },
      {
        "id": "Patient.name.given",
        "path": "Patient.name.given",
        "min": 1,
        "mapping": [
          {
            "identity": "pdmp-patient-to-pmix",
            "map": "pmp:Patient/nc:PersonName/nc:PersonGivenName"
          }
        ]
      },
      {
        "id": "Patient.name.suffix",
        "path": "Patient.name.suffix",
        "mapping": [
          {
            "identity": "pdmp-patient-to-pmix",
            "map": "pmp:Patient/nc:PersonName/nc:PersonNameSuffixText"
          }
        ]
      },
      {
        "id": "Patient.gender",
        "path": "Patient.gender",
        "mapping": [
          {
            "identity": "pdmp-patient-to-pmix",
            "map": "pmp:Patient/j:PersonSexCode"
          }
        ]
      },
      {
        "id": "Patient.birthDate",
        "path": "Patient.birthDate",
        "min": 1,
        "constraint": [
          {
            "key": "pdmp-full-birthdate",
            "severity": "error",
            "human": "Date SHALL include year, month and day if present",
            "expression": "extension.exists() or toString().length()=10",
            "source": "http://hl7.org/fhir/us/pdmp/StructureDefinition/pdmp-patient"
          }
        ],
        "mapping": [
          {
            "identity": "pdmp-patient-to-pmix",
            "map": "pmp:Patient/nc:PersonBirthDate"
          }
        ]
      },
      {
        "id": "Patient.address",
        "path": "Patient.address",
        "mapping": [
          {
            "identity": "pdmp-patient-to-pmix",
            "map": "pmp:Patient/pmp:PersonPrimaryContactInformation/nc:ContactMailingAddress"
          }
        ]
      },
      {
        "id": "Patient.address.line",
        "path": "Patient.address.line",
        "mapping": [
          {
            "identity": "pdmp-patient-to-pmix",
            "map": "pmp:Patient/pmp:PersonPrimaryContactInformation/nc:ContactMailingAddress/nc:Location.Street"
          }
        ]
      },
      {
        "id": "Patient.address.city",
        "path": "Patient.address.city",
        "mapping": [
          {
            "identity": "pdmp-patient-to-pmix",
            "map": "pmp:Patient/pmp:PersonPrimaryContactInformation/nc:ContactMailingAddress/nc:LocationCityName"
          }
        ]
      },
      {
        "id": "Patient.address.state",
        "path": "Patient.address.state",
        "mapping": [
          {
            "identity": "pdmp-patient-to-pmix",
            "map": "pmp:Patient/pmp:PersonPrimaryContactInformation/nc:ContactMailingAddress/nc:LocationState"
          }
        ]
      },
      {
        "id": "Patient.address.postalCode",
        "path": "Patient.address.postalCode",
        "mapping": [
          {
            "identity": "pdmp-patient-to-pmix",
            "map": "pmp:Patient/pmp:PersonPrimaryContactInformation/nc:ContactMailingAddress/nc:LocationPostalCode"
          }
        ]
      },
      {
        "id": "Patient.address.country",
        "path": "Patient.address.country",
        "mustSupport": true,
        "mapping": [
          {
            "identity": "pdmp-patient-to-pmix",
            "map": "N/A",
            "comment": "no equivalent in PMIX_NIEM_4"
          }
        ]
      }
    ]
  }
}
